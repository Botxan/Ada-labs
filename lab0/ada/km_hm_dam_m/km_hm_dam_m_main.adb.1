WITH Ada.Text_IO, Ada.Integer_Text_IO, km_hm_dam_m_p;
USE Ada.Text_IO, Ada.Integer_Text_IO;

PROCEDURE km_hm_dam_m_main IS
   m: Integer; -- metros de entrada
   km, hm, dam: Integer;
   m_out: Float; -- metros de salida
BEGIN
   put("Introduzca los kilometros: ");
   get(m);

   new_line;
   new_line;

   -- Demostracion de procedimiento
   km_hm_dam_m_p(m, km, hm, dam, m_out);
   put("El resultado es: " & Integer'Image(km) & "km " & Integer'Image(hm) & "hm " & Integer'Image(dam) & "dam" & Float'Image(m_out));

   -- Demostracion de funcion
END km_hm_dam_m_main;