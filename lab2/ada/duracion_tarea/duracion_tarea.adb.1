   -- Post: hora de finalizacion de la tarea (h, m, s) y si ha cambiado el dia(cambio de jornada)(dia_siguiente: Boolean)
   hora_inicial_segundos: Integer := (h*3600) + (m * 60) + s;


BEGIN
   if duracion < 14401 then

      if (hora_inicial_segundos + duracion > 57600) then
         dia_siguiente := true;
         duracion := duracion - (57600 - duracion);
         hora_inicial_segundos := 28800 + duracion;

         h := hora_inicial_segundos / 3600;
         m := (hora_incial_segundos / 60) rem 60;
