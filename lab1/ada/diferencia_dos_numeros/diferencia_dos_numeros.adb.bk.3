FUNCTION diferencia_dos_numeros(num1, num2: in Integer) return Integer IS
   diferencia:= Integer;
BEGIN

   if (num1 > num2) then
      diferencia = num1 - num2;
   elsif (num1 < num2) then
      diferencia = num2 - num1;
   else
      diferencia = 0;
   end if;

   return diferencia;

END diferencia_dos_numeros;